<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker.theme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/primaryMarginPaddingSize"
        android:paddingTop="@dimen/secondaryMarginPaddingSize"
        android:paddingEnd="@dimen/secondaryMarginPaddingSize">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                style="@style/icon.btnBack.theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                style="@style/h1.theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/settings" />
        </LinearLayout>


        <FrameLayout
            style="@style/settingsItem"
            android:layout_marginTop="40dp">

            <TextView
                style="@style/p.theme.settingsStartItem"
                android:text="@string/darkTheme" />

            <Switch
                android:id="@+id/swTheme"
                style="@style/icon.settingsEndItem.theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout style="@style/settingsItem">

            <TextView
                style="@style/p.theme.settingsStartItem"
                android:text="@string/shareApp" />

            <ImageView
                style="@style/icon.settingsEndItem.theme"
                android:src="@drawable/ic_share" />
        </FrameLayout>

        <FrameLayout style="@style/settingsItem">

            <TextView
                style="@style/p.theme.settingsStartItem"
                android:text="@string/writeSupport" />

            <ImageView
                style="@style/icon.settingsEndItem.theme"
                android:src="@drawable/ic_support" />
        </FrameLayout>

        <FrameLayout style="@style/settingsItem">

            <TextView
                style="@style/p.theme.settingsStartItem"
                android:text="@string/terms" />

            <ImageView
                style="@style/icon.settingsEndItem.theme"
                android:baselineAlignBottom="false"
                android:src="@drawable/ic_arrow_forward" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSearch"
            style="@style/btn.bottomBar.theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search"
            app:icon="@drawable/ic_search" />

        <Button
            android:id="@+id/btnLibrary"
            style="@style/btn.bottomBar.theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/library"
            app:icon="@drawable/ic_library" />

        <Button
            android:id="@+id/btnSettings"
            style="@style/btn.bottomBar.theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings" />
    </LinearLayout>
</LinearLayout>