<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PlaylistMaker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/primary_margin_padding_size"
        android:layout_marginTop="@dimen/primary_margin_padding_size"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="@dimen/primary_margin_padding_size"
        android:orientation="vertical">

        <TextView
            style="@style/H1_text"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:text="@string/app_name"/>

        <Button
            android:id="@+id/search_btn"
            style="@style/btn.main_screen_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/search"
            app:icon="@drawable/ic_search"/>

        <Button
            android:id="@+id/library_btn"
            style="@style/btn.main_screen_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"

            android:text="@string/library"
            app:icon="@drawable/ic_library"/>

        <Button
            android:id="@+id/settings_btn"
            style="@style/btn.main_screen_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:text="@string/settings"
            app:icon="@drawable/ic_settings"/>

    </LinearLayout>

</LinearLayout>