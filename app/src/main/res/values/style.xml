<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn.main_screen_btn">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/H1_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">@dimen/primary_icon_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/settings_item_padding_margin_size</item>
        <item name="android:paddingBottom">@dimen/settings_item_padding_margin_size</item>
    </style>

    <style name="icon">
        <item name="iconSize">@dimen/primary_icon_size</item>
    </style>

    <style name="H1_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/H1_text_size</item>
    </style>

    <style name="p_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/p_text_size</item>
    </style>

    <style name="p_text.theme.settings_item_first_element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="icon.settings_item_second_element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="icon.back_arrow_btn">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>